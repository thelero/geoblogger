<% form_for(@event) do |f| %> 
  <%= f.error_messages %> 

  <fieldset> 
  <legend>Enter Event Details</legend>
  <p> 
    <%= f.label :title %>: 
    <%= f.text_field :title, :size => 40 %> 
  </p>
  <p> 
    <%= f.label :description %>: 
    <%= f.text_area :description %> 
  </p>
  <p> 
    <%= f.label :location %>: 
    <%= f.text_field :location %> 
  </p>
  <p>
    <%= f.submit "Add Event", :class => "submit" %> 
  </p> 
  </fieldset> 
<% end %>